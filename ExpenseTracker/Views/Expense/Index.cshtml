@model IEnumerable<Expense>




<div class="row">
    <div class="col-md-6">
        <h1>List of Expesne</h1>

    </div>
    <div class="col-md-6">
        <a asp-action="Create" asp-controller="Expense" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i>Add Expense</a>
    </div>
</div>
<table class="table table-bordered">
    <tr>
        <th>ExpesnseId</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Created Date</th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Amount</td>
            <td>@item.CreatedDate</td>
            <td>
                @*<a asp-action="Details" asp-controller="Expense" asp-route-id="@item.Id"><i class="bi bi-card-list">Details</i></a>*@
                <a asp-action="Update" asp-controller="Expense" asp-route-id="@item.Id" ><i class="bi bi-pencil-square">Update</i></a>
                <a asp-action="Delete" asp-controller="Expense" asp-route-id="@item.Id"><i class="bi bi-trash3"></i>Delete</a>
            </td>
        </tr>

    }

</table>